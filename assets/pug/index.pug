							.d-flex.flex-column.align-items-center
								h3.h-mb-8.h-color-gray100 E-mail
								.c-icon-circle.c-icon-circle_md.c-icon-circle_md-lg.h-mb-8(class="c-icon-circle_green")
									svg.c-icon-circle__icon
										use(href="#icon-message")
								h4.text-center.font-weight-normal info@goworun.com
